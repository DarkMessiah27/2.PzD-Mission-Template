// This module selectively disables the vehicle information display panels.
// More info on each panel can be viewed here: https://community.bistudio.com/wiki/Arma_3_Custom_Info#User_Interface

// To DISABLE a panel set it's variable to False.

// CREW - List of Crew and Passengers - Enabled by default
vicDisplay_Allow_CrewDisplay = True;

// NAV - GPS minimap
vicDisplay_Allow_MiniMap = False;

// CAM Missile - View from Missile camera
vicDisplay_Allow_MissileDisplay = False;

// SENS - Sensors Display (Rader, etc)
vicDisplay_Allow_SensorsDisplay = False;

// SLA - Sling Load Assistant
vicDisplay_Allow_SlingLoadDisplay = False;

// CAM Drone - View from Drone
vicDisplay_Allow_UAVFeedDisplay = False;

// CAM Commander - View from Commander's camera
vicDisplay_Allow_VehicleCommanderDisplay = False;

// CAM Driver - View from Driver's camaera
vicDisplay_Allow_VehicleDriverDisplay = False;

// CAM Gunner - View from Gunner's camera
vicDisplay_Allow_VehicleGunnerDisplay = False;
